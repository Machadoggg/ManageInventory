@model IEnumerable<ManageInventory.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Libros</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberPages)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IdEditorialNavigation)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopsis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberPages)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.IdEditorialNavigation.IdEditorial)
            </td>*@
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Isbn">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Isbn">Details</a>|
                <a asp-action="Delete" asp-route-id="@item.Isbn">Delete</a>*@

                <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@item.Isbn" class="btn btn-sm btn-primary">Details</a>
                </div>

            </td>
        </tr>
}
    </tbody>
</table>
